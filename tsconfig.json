{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react",
    "outDir": "lib",
    "declaration": true,
    "rootDirs": ["src"],
    "resolveJsonModule": true,
    "skipLibCheck": false,
    "inlineSourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test.tsx"]
}
